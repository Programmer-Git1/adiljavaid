#include<stdio.h>
int main()
{
    int i, size, number, j;
    printf("Enter the size\n");
    scanf("%d", &size); //user enter the size
    if(size >= 1 && size < 10)  //condition that size is start from 1 and end from 9
    {

    printf("Enter the starting number\n");
    scanf("%d", &number); //user enter the number to which the program start
    for(int i=size; i >= 1;i--) //initializing the variable of i with size and then put the condition that i is greater than equal to 1 and last decrement i to 1
    {
        for(int j =1; j <= i; j++)
        {
            if(number >= 1 && number < 10) //Condition the number user enter must be with in 1 to 9
            {
                printf("%2d", number); //The number user enter is printed with 2 spaces


                number++; //Increment the number by 1
                {
                    if(number >= 10)
            {
                number = 1;

            }
                }

            }
     else
                    printf("\n");
        }
       printf("\n");
    }

       }
else
        printf("The size %d is invalid", size);
}
